<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.kafka.clients.consumer" level="ERROR"/>
    <logger name="org.apache.kafka.clients.FetchSessionHandler" level="ERROR"/>
    <logger name="org.apache.kafka" level="ERROR"/>


    <!-- High level logging -->
    <logger name="org.apache.kafka.clients.consumer.internals.ConsumerCoordinator" level="ERROR"/>
    <!-- High level logging -->

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
